<p style="color: green"><%= notice %></p>

<h1>Home Page of Book Collection</h1>

<h2>There are <%= @books.count%> book(s)</h2>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show this book", book %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>
